{
  "name": "language-mdx",
  "displayName": "MDX Language",
  "description": "Provides syntax highlighting and bracket matching for MDX (JSX in Markdown) files.",
  "version": "0.0.1",
  "publisher": "silvenon",
  "engines": {
    "vscode": "^1.25.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [{
      "id": "mdx",
      "aliases": ["Markdown React", "mdx"],
      "extensions": ["mdx"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "mdx",
      "scopeName": "source.mdx",
      "path": "./syntaxes/mdx.tmLanguage.json"
    }]
  }
}
